{
  "name": "angular-invoice-app",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --open",
    "build": "ng build",
    "build:gh": "ng build --configuration gh-pages",
    "build:standalone": "ng build --configuration production && node create-standalone-dist.js",
    "start:server": "node server.js",
    "package": "npm run build:standalone && pkg server.js --targets node18-win-x64 --output facture-app.exe && node create-release.js",
    "test": "ng test",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "bin": "server.js",
  "pkg": {
    "assets": [
      "dist/**/*"
    ],
    "outputPath": "release"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.14",
    "@angular/common": "^18.2.14",
    "@angular/compiler": "^18.2.14",
    "@angular/core": "^18.2.14",
    "@angular/forms": "^18.2.14",
    "@angular/platform-browser": "^18.2.14",
    "@angular/platform-browser-dynamic": "^18.2.14",
    "express": "^4.22.1",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "open": "^8.4.2",
    "rxjs": "^7.8.0",
    "tslib": "^2.6.2",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.21",
    "@angular/cli": "^18.2.21",
    "@angular/compiler-cli": "^18.2.14",
    "fs-extra": "^11.3.3",
    "pkg": "^5.8.1",
    "typescript": "~5.4.0"
  }
}
